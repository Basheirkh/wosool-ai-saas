# ============================================================================
# WOSOOL AI SAAS - ENVIRONMENT CONFIGURATION
# ============================================================================
# Copy this file to .env and fill in your actual values
# ============================================================================

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
POSTGRES_PASSWORD=your_secure_postgres_password_here
POSTGRES_ADMIN_USER=postgres

# ============================================================================
# APPLICATION SECRETS
# ============================================================================
# Generate with: openssl rand -hex 32
JWT_SECRET=your_jwt_secret_here
APP_SECRET=your_app_secret_here
SUPER_ADMIN_KEY=your_super_admin_key_here

# ============================================================================
# CLERK AUTHENTICATION
# ============================================================================
# Get these from https://dashboard.clerk.com
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_xxxxxxxxxxxxxxxxxxxxxxxxxxxxx
CLERK_SECRET_KEY=sk_test_xxxxxxxxxxxxxxxxxxxxxxxxxxxxx
CLERK_WEBHOOK_SECRET=whsec_xxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# ============================================================================
# SALLA INTEGRATION
# ============================================================================
# Get these from https://salla.dev
SALLA_CLIENT_ID=your_salla_client_id
SALLA_CLIENT_SECRET=your_salla_client_secret
SALLA_REDIRECT_URI=https://api.wosool.ai/salla/callback
SALLA_WEBHOOK_SECRET=your_salla_webhook_secret

# ============================================================================
# APPLICATION URLS
# ============================================================================
APP_URL=https://wosool.ai
CRM_BASE_URL=api.wosool.ai
REACT_APP_SERVER_BASE_URL=http://localhost:3000
TWENTY_BASE_URL=http://localhost:3000/metadata

# ============================================================================
# TWENTY CRM CONFIGURATION
# ============================================================================
TWENTY_ADMIN_TOKEN=
BOOTSTRAP_SECRET=
TWENTY_API_KEY=

# Migration Control (set to true to skip migrations)
DISABLE_DB_MIGRATIONS=false
DISABLE_CRON_JOBS_REGISTRATION=false

# ============================================================================
# MONITORING & ADMIN TOOLS
# ============================================================================
GRAFANA_ADMIN_PASSWORD=admin
PGADMIN_EMAIL=admin@wosool.ai
PGADMIN_PASSWORD=admin

# ============================================================================
# OPTIONAL: PRODUCTION SETTINGS
# ============================================================================
# NODE_ENV=production
# LOG_LEVEL=info
# ENABLE_SSL=true
# SSL_CERT_PATH=/etc/ssl/certs/cert.pem
# SSL_KEY_PATH=/etc/ssl/private/key.pem
